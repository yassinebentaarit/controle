
{% extends 'base.html.twig'%}

{% block body %}
    <div style= "display: flex; align-items: center;justify-content:center; margin-top:100px;padding:10px;">

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">AJOUT D'UN MEDICAMENT</h5>

          <!-- General Form Elements -->
          {{ form_start (f,{attr:{novalidate:'novalidate'}}) }}
          <div class="row mb-3">
              <label for="inputText" class="col-sm-5 col-form-label">Nom du Medicament</label>
              {{ form_widget (f.nomA,{'attr':{'class':'form-control'}}) }}
              {{ form_errors (f.nomA,{'attr':{'class':'text-danger'}}) }}
          </div>
          
          <div class="row mb-3">
            <label for="inputText" class="col-sm-5 col-form-label">Categorie</label>
                {{ form_widget (f.categorie,{'attr':{'class':'form-control'}}) }}
                {{ form_errors (f.categorie,{'attr':{'class':'text-danger'}}) }}
            </div>

          <div class="row mb-3">
            <label for="inputText" class="col-sm-5 col-form-label">Quantit√©</label>
                {{ form_widget (f.quantite,{'attr':{'class':'form-control'}}) }}
                {{ form_errors (f.quantite,{'attr':{'class':'text-danger'}}) }}
            </div>
              
            
            <div class="row mb-3">
              <label for="inputDate" class="col-sm-6 col-form-label">Date d'expiration</label>
                {{ form_widget (f.date, {'label': 'Date d\'expiration', 'widget': 'choice', 'html5': true, 'empty_data' :null,}) }} 
                {{ form_errors (f.date,{'attr':{'class':'text-danger'}}) }}
            </div>
                    

            <div class="col-sm-10" style="display:flex; align-items:center; justify-content:center">
              {{ form_widget (f.Ajouter,{'attr':{'class':'btn btn-primary'}}) }}
            </div>

          {{ form_end (f) }}
        </div>
      </div>
   
  </div> 

{% endblock %}