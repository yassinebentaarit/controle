{% extends 'base.html.twig' %}

{% block title %}Modifier Categorie{% endblock %}

{% block body %}
<div class="row" style="display: flex; align-items: center; justify-content:center;margin-top:100px;margin-left:200px">
    <div class="col-lg-10">
    <h1>Modifier RDV</h1>

    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
    <div >

    </div>

    <div class="row">
        <div class="col">
            <div class="mb-3 row">
                {{ form_label(form.nom, 'Nom', { 'attr': {'class': 'col-lg-2 col-form-label'} }) }}
                <div class="col-lg-10">
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                </div>
