                <div class="form-error">
                    {{ form_errors(form.dateR) }}
                </div>
                {{ form_label(form.idpatient, 'Patient', { 'attr': {'class': 'col-lg-2 col-form-label'} }) }}
                <div class="col-lg-10">
                    {{ form_widget(form.idpatient, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-error">
                    {{ form_errors(form.idpatient) }}
                </div>



            </div>

        </div>
    </div>
    <div class="col-sm-10" style="display:flex; align-items:center">
        {{ form_widget (form.Ajouter,{'attr':{'class':'btn btn-success'}}) }}
